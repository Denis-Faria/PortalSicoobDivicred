@model PortalSicoobDivicred.Models.SolicitacaoWebDesk

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["MensagemValidacao"] != null)
{
    @Html.Label("")


    <script>

        iziToast.success({
            title: 'Sucesso',
            position: "center",
            message: '@TempData["MensagemValidacao"]'
        });

    </script>
}

@if (TempData["Erro"] != null)
{
    @Html.Label("")


    <script>

        iziToast.error({
            title: 'Erro',
            position: "center",
            message: '@TempData["Erro"]'
        });

    </script>
}

<script>
    function Funcionario() {
        $("#ParametroSelecionado").empty();
        $("#PanelGrupo").addClass("panel-block");
        $("#PanelPermissao").addClass("panel-block");

        $.ajax(
            {
                type: 'GET',
                url: '/Parametros/Funcionario',
                dataType: 'html',
                cache: true,
                async: true,
                success: function (data) {
                    $("#ParametroSelecionado").append(data);
                }
            });

    }
    function Grupo() {
        $("#ParametroSelecionado").empty();
        $("#PanelFuncionario").addClass("panel-block");
        $("#PanelPermissao").addClass("panel-block");
       

        $.ajax(
            {
                type: 'GET',
                url: '/Parametros/Grupo',
                dataType: 'html',
                cache: true,
                async: true,
                success: function (data) {
                    $("#ParametroSelecionado").append(data);

                }
            });

    }

    function Permissao() {
        $("#ParametroSelecionado").empty();
        $("#PanelGrupo").addClass("panel-block");
        $("#PanelFuncionario").addClass("panel-block");
        

        $.ajax(
            {
                type: 'GET',
                url: '/Parametros/Permissao',
                dataType: 'html',
                cache: true,
                async: true,
                success: function (data) {
                    $("#ParametroSelecionado").append(data);
                    
                   

                }
            });

    }




</script>
<body>

    @if (TempData["Mensagem"] != null)
    {
        @Html.Label("")


        <script>

        iziToast.success({
            title: 'Sucesso',
            position: "center",
            message: '@TempData["Mensagem"]'
        });

        </script>
    }


    <br />
    <nav class="level ">
        <p class="level-item has-text-centered">
            <img src="/Images/Webdesk.png" alt="" style="height: 30px;">
        </p>
    </nav>


    <script src='@Url.Content("~/Assets/js/jquery.tablesorter.min.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Assets/js/jquery.tablesorter.pager.js")' type="text/javascript"></script>
    <script src="//cdn.ckeditor.com/4.9.0/standard/ckeditor.js"></script>

    <script type="text/javascript">

        var multiFiles = [];

        function multiUp(e) {
            $(e).removeClass("file-input");
            $(e).hide();
            $("#formesconde").hide();
            $("#" + multiFiles.length).hide();
            this.__fileHolder = document.querySelector("#ArquivosSelecionados");

            this.__fileHolder.innerHTML = '';
            var i;

            for (i = 0; i < e.files.length; i++) {
                this.multiFiles.push(e.files[i]);

            }
            $("#Upload-form").append(
                " <div id=" +
                multiFiles.length +
                " class='field is-fullwidth'><div class='file is-primary'><label class='file-label'><input class='file-input' multiple type='file' onchange='multiUp(this)' name='postedFiles'><span class='file-cta'><span class='file-icon'><i class='fas fa-upload'></i></span><span class='file-label'>Anexar Arquivos</span></span></label></div></div>");
            for (i = 0; i < this.multiFiles.length; i++) {
                addDeleteBtn(i, this, this.multiFiles[i].name);
            }

        }

        function ValidaMascara(valor) {

            if (valor.replace(/\D/g, '').length === 11) {
                $('#CpfFuncionario').mask('000.000.000-00');
            } else {
                $('#CpfFuncionario').mask('00.000.000/0000-00');
            }

        };

        function RemoveMascara() {
            $("#CpfFuncionario").unmask();

        }

        $(document).ready(function () {

            $("#CpfCadastro").hide();
            $("#TabWebdesk").tabs();
            var editor = CKEDITOR.replace('Descricao');
            try {
                $("#TabelaChamados")
                    .tablesorter({ widthFixed: true, widgets: ['zebra'] })
                    .tablesorterPager({ container: $("#pager") });
            } catch (e) {

            }

            jQuery(document).ready(function ($) {
                $(".clickable-row").click(function () {
                    window.location = $(this).data("href");
                });
            });


        });





    </script>
    <style>
        #add {
            cursor: pointer;
            font-size: 2em;
        }

        #fileHolder {
            color: rgba(0, 0, 0, .7);
            display: inline-block;
            font-size: 70%;
            max-width: 80%;
            overflow-x: auto;
            white-space: nowrap;
        }

        .deleteBtn {
            color: #000;
            cursor: pointer;
        }
    </style>
    <div class="column is-12">

        <div class="column is-4" id="Parametros" style="float:left">

            <div class="columns">
                <div class="column -is-6">
                    <nav class="panel">
                        <p class="panel-heading">
                            Parâmetros
                        </p>
                        <a id="PanelFuncionario" style="background-color: white" class="panel-block" href="Javascript:Funcionario();void(0);">
                            <span class="panel-icon">
                                <i class="fas fa-address-card"></i>
                            </span>
                            Funcionários
                        </a>
                        <a id="PanelGrupo" style="background-color: white" class="panel-block" href="Javascript:Grupo();void(0);">
                            <span class="panel-icon">
                                <i class="fas fa-address-card"></i>
                            </span>
                            Grupos
                        </a>
                        <a id="PanelPermissao" style="background-color: white" class="panel-block" href="Javascript:Permissao();void(0);">
                            <span class="panel-icon">
                                <i class="fas fa-address-card"></i>
                            </span>
                            Permissão
                        </a>

                    </nav>
                </div>
            </div>
        </div>

        <div class="column is-8" id="ParametroSelecionado" style="float:right">
        </div>

    </div>

    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type="text/javascript">
    </script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type="text/javascript"></script>

</body>