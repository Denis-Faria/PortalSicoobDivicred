
<script src='@Url.Content("~/Assets/js/jquery-ui.min.js")' type="text/javascript"></script>
<link href="@Url.Content("~/Assets/css/animate.css")" rel="stylesheet" />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<script>
    $(function () {
        $("#TabBancoHoras").tabs();
    });
</script>


<!DOCTYPE html>




<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Pgd</title>
</head>

<nav class="level ">
    <p class="level-item has-text-centered">
        <img src="/Images/CIM.png" alt="" style="height: 30px;">
    </p>
</nav>

<nav class="level ">
    <p class="level-item has-text-centered">
        Pontuação:@TempData["teste"]
    </p>
</nav>

<body>
    <div id="TabBancoHoras">
        <div class="tabs is-centered is-boxed">
            <ul>
                <li id="AbaCadastro" class="is-active">
                    <a href="#Justificativa" onclick="javascript:$('#AbaExtrato').removeClass();$('#AbaCadastro').addClass('is-active');$('#AbaBancoHoraUsuario').removeClass();$('#AbaVagasInternas').removeClass();">
                        <span class="icon is-small">
                            <i class="fa fa-pencil"></i>
                        </span>
                        <span>Cadastro</span>
                    </a>
                </li>
                <li id='AbaExtrato'>
                    <a href='#JustificativaSetor' onclick="javascript:$('#AbaCadastro').removeClass();$('#AbaExtrato').addClass('is-active');$('#AbaBancoHoraUsuario').removeClass();$('#AbaVagasInternas').removeClass();">
                        <span class='icon is-small'>
                            <i class='fa fa-list'></i>
                        </span>
                        <span>Extrato</span>
                    </a>
                </li>


            </ul>
        </div>
        <div id="Justificativa">
            @Html.Action("Cadastro","Pgd")
        </div>
        <div id="JustificativaSetor">
            @Html.Action("Extrato", "Pgd")
        </div>


    </div>

</body>
</html>
