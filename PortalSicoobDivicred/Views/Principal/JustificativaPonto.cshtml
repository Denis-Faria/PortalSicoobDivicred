@model PortalSicoobDivicred.Models.JustificativaPonto
@{
    Layout = null;
}
<script src='@Url.Content("~/Scripts/jquery.validate.js")' type="text/javascript">
</script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type="text/javascript"></script>

@using (Html.BeginForm("Justificativas", "Principal"))
{
    <table id="Pendencias" name="Pendencias" class="table is-striped is-centered is-narrow is-fullwidth ">
        <thead>
        <th>ID</th>
        <th>Funcionário</th>
        <th>Dia</th>
        <th>Entrada</th>
        <th>Saída Almoço</th>
        <th>Volta Almoço</th>
        <th>Saída</th>
        <th>
            Hora Justificada
        </th>
        <th>Justificativa</th>
        </thead>


        <tbody>
            @for (var i = 0; i < Convert.ToInt32(TempData["TotalPonto"]); i++)
            {
                <tr>
                    <td><input name="Id" id="Id" value="@TempData["IdPendencia" + i]" hidden="true" />@TempData["IdPendencia" + i]</td>
                    <td>
                        @TempData["NomePendencia" + i]
                    </td>
                    <td>
                        @TempData["DiaPendencia"]
                    </td>
                    <td>
                        @TempData["Hora1Pendencia" + i]
                    </td>
                    <td>
                        @TempData["Hora2Pendencia" + i]
                    </td>
                    <td>
                        @TempData["Hora3Pendencia" + i]
                    </td>
                    <td>
                        @TempData["Hora4Pendencia" + i]
                    </td>
                    <td class="is-centered">

                        @Html.TextBoxFor(m => m.HoraJustificada, null, new { @class = "input" })
                        @Html.ValidationMessageFor(m => m.HoraJustificada, null, new { style = "color:red" })
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.IdJustificativa, new SelectList(Model.Justificativa, "Value", "Text"), "SELECIONE SUA JUSTIFICATIVA", new { @class = "select is-primary", id = "justificativaponto" })
                        @Html.ValidationMessageFor(m => m.IdJustificativa, null, new { style = "color:red" })
                    </td>

                </tr>
            }

        </tbody>
    </table>
    <button type="submit" class="button is-primary card-footer-item">
        <span class="icon is-small">
            <i class="fa fa-indent"></i>
        </span>
        <span> Justificar</span>
    </button>
}