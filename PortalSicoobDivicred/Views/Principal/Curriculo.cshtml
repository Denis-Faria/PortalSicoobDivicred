    //Pesqquisa em tabela
    $(function() {
        $(".input-search").keyup(function() {
            var tabela = $(this).attr('alt');
            if ($(this).val() !== "") {
                $("." + tabela + " tbody>tr").hide();
                $("." + tabela + " td:contains-ci('" + $(this).val() + "')").parent("tr").show();
            } else {
