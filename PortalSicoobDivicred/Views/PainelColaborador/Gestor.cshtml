
<script src='@Url.Content("~/Scripts/jquery.validate.js")' type="text/javascript">
</script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type="text/javascript"></script>

<script>
    function Buscar() {
        $("#ListaGestor").empty();
        $.ajax(
            {
                type: 'Post',
                url: '/PainelColaborador/BuscarGestor',
                dataType: 'html',
                cache: true,
                async: true,
                data: { "DescricaoCertificacao": $("#BuscaGestor").val() },
                success: function (data) {
                    $("#ListaGestor").append(data);

                }
            });

    }
    function BuscaSetor() {
        // Declare variables
        var input, filter, ul, li, a, i;
        input = document.getElementById('BuscaSetor');
        filter = input.value.toUpperCase();
        ul = document.getElementById("ListaSetores");
        li = ul.getElementsByTagName('li');

        // Loop through all list items, and hide those who don't match the search query
        for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("label")[0];
            if (a.innerHTML.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
            } else {
                li[i].style.display = "none";
            }
        }
    }
</script>
<div>

    <div class="field is-grouped is-desktop">

        <p class="control">
            <button class="button is-primary modal-button" id="NovoChamado" onmouseleave="$('#NovoChamado').removeClass('animated pulse')" onmouseover="$('#NovoChamado').addClass('animated pulse');" data-balloon="Clique para editar uma função existente." data-balloon-pos="down" onclick="javascript:$('#ModalGestor').removeClass();$('#ModalGestor').addClass('modal is-active');void(0);">
                <span class="icon is-small">
                    <i class="fas fa-edit" aria-hidden="true"></i>
                </span>
                <span class="name">Editar Gestor</span>
            </button>
        </p>
    </div>
    @using (Html.BeginForm("Gestor", "PainelColaborador"))
    {
        <div class="field">
            <div class="card">
                <header class="card-header">
                    <p class="card-header-title">
                        Certificações
                    </p>

                </header>
                <div class="card-content">
                    <div class="content">
                        <div class="field">
                            <div class="control has-icons-left ">
                                <input id="BuscaCertificacao" class="input is-fullwidth" onkeyup="BuscaCertificacoes()" type="text" placeholder="Busque uma certificação">
                                <span class="icon is-small is-left">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                        </div>
                        <ul id="ListaGestores">
                            @for (int i = 0; i < Convert.ToInt32(@TempData["TotalSetor"]); i++)
                            {
                                <li>
                                    <label class="checkbox">
                                        <input type="checkbox" name="Certificacao @i" value="@TempData["IdCertificacao" + i]">
                                        @TempData["DescricaoCertificacao" + i]
                                    </label>
                                </li>

                            }
                        </ul>
                    </div>
                </div>

            </div>
            <div class="card" >
                <header class="card-header">
                    <p class="card-header-title">
                        Setores
                    </p>

                </header>
                <section class="modal-card-body">

                <div class="card-content">
                    <div class="content">
                        <div class="field">
                            <div class="control has-icons-left ">
                                <input id="BuscaSetor" class="input is-fullwidth" onkeyup="BuscaSetor()" type="text" placeholder="Busque um setor">
                                <span class="icon is-small is-left">
                                    <i class="fas fa-search"></i>
                                </span>
                            </div>
                        </div>
                        <ul id="ListaSetores">
                            @for (int i = 0; i < Convert.ToInt32(@TempData["TotalSetores"]); i++)
                            {
                                <li>
                                    <label class="checkbox">
                                        <input type="checkbox" name="Setor @i" value="@TempData["IdSetor" + i]">
                                        @TempData["DescricaoSetor" + i]
                                    </label>
                                </li>

                            }
                        </ul>
                    </div>
                </div>
                </section>
            </div>
        </div>
        <p class="control">
            <button type="submit" class="button is-success " id="CadastroFuncao" onmouseleave="$('#CadastroFuncao').removeClass('animated pulse')" onmouseover="$('#CadastroFuncao').addClass('animated pulse');" data-balloon="Clique para editar uma função existente." data-balloon-pos="down">
                <span class="icon is-small">
                    <i class="fas fa-save" aria-hidden="true"></i>
                </span>
                <span class="name">Cadastrar Gestor</span>
            </button>
        </p>
    }
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type="text/javascript"></script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type="text/javascript"></script>

    @using (Html.BeginForm("EditarGestor", "PainelColaborador"))
    {
        <div id="ModalGestor" class="modal">
            <div class="modal-background"></div>
            <div class="modal-card">
                <header class="modal-card-head">
                    <p class="modal-card-title">Editar Gestor</p>
                    <a href="javascript:$('#ModalGestor').removeClass();$('#ModalGestor').addClass('modal');void(0);" class="delete"></a>
                </header>
                <section class="modal-card-body">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                Gestores
                            </p>

                        </header>
                        <div class="card-content">
                            <div class="content">

                                <div class="field has-addons">
                                    <div class="control has-icons-left is-expanded">
                                        <input id="BuscaCertificacao" class="input is-fullwidth" type="text" placeholder="Busque um gestor.">
                                        <span class="icon is-small is-left">
                                            <i class="fas fa-search"></i>
                                        </span>
                                    </div>
                                    <div class="control">
                                        <a href="Javascript:Buscar();void(0);" class="button is-success">
                                            Procurar
                                        </a>
                                    </div>
                                </div>
                                <ul id="ListaGestor"></ul>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div id="EdicaoGestor" hidden>

                        <br />
                    </div>
                </section>
                <footer class="modal-card-foot">
                    <button type="submit" id="SalvaGestor" disabled class="button is-success">Salvar Gestor</button>
                    <a class="button" href="javascript:$('#ModalGestor').removeClass();$('#ModalGestor').addClass('modal');void(0);">Cancelar</a>
                </footer>
            </div>
        </div>
    }

</div>