@using System.Web.Mvc.Html
@model PortalSicoobDivicred.Models.RecrutamentoSelecao
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <script type="text/javascript" src="@Url.Content("https://code.jquery.com/jquery-2.1.1.min.js")"></script>
    <link href="@Url.Content("https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.0/css/bulma.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/css/font-awesome.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Assets/css/Imprimir.css")" rel="stylesheet" />
    <script src='@Url.Content("~/Scripts/jquery.validate.js")' type="text/javascript">
    </script>
    <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type="text/javascript"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Recrutamento Selecao</title>
</head>
<body>
    <div>
        @using (Html.BeginForm("RecrutamentoSelecao", "FormulariosMig"))
        {
            <div class="container">
                <div class="box">
                    <article id="printable" class="media">
                        <div class="media-content">
                            <div class="content">
                                <span class="tag is-primary">
                                    Controle de Recrutamento e Seleção
                                </span>
                                <br />
                                <br />
                                <input hidden name="IdVaga" value="@TempData["IdVaga"]" />
                                <input hidden name="Atualiza" value="@TempData["Atualiza"]" />
                                <p> <strong>Vaga: </strong>@TempData["Vaga"]</p>
                                <div class="field is-grouped">
                                    <div class="field control">
                                        <label class="label">Classe do Cargo</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.ClasseCargo, null, new { @class = "input", placeholder = "Classe do Cargo" })
                                        </div>
                                    </div>
                                    <div class="field control">
                                        <label class="label">Nível do Cargo</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.NivelCargo, null, new { @class = "input", placeholder = "Nivel Cargo" })
                                        </div>
                                    </div>
                                </div>
                                <p><strong>Data Solicitação: </strong>@TempData["Solicitacao"]</p>
                                <div class="field">
                                    <label class="label">Mês para Admissão</label>
                                    <div class="control">
                                        @Html.TextBoxFor(m => m.MesAdmissao, null, new { @class = "input", placeholder = "Ex: 01/06/2017" })
                                        @Html.ValidationMessageFor(m => m.MesAdmissao, null, new { style = "color:red" })
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label">Motivo Seleção</label>
                                    <div class="control">
                                        <div class="select">
                                            <select id="MotivoSelecao" name="MotivoSelecao">
                                                <option selected id="Aumento" value="Aumento">Aumento Efetivo</option>
                                                <option id="Substituicao" value="Substituicao">Substituição</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label">Nome do empregado substituído</label>
                                    <div class="control">
                                        <input hidden class="input" type="text" placeholder="Ex: João da Silva">
                                    </div>
                                </div>
                                <div class="field">
                                    <label class="label">Vaga Prevista no orçamento ?</label>
                                    <div class="control">
                                        <div class="select">
                                            <select id="PrevisaoOrcamento" name="PrevisaoOrcamento">
                                                <option selected id="PrevisaoSim" value="Sim">Sim</option>
                                                <option id="PrevisaoNao" value="Nao">Não</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <span class="tag is-primary">
                                    Procedimento de Recrutamento e Seleção
                                </span>
                                <div class="field">
                                    <label class="label">Tipo de Recrutamento</label>
                                    <div class="control">
                                        <div class="select">
                                            <select id="TipoRecrutamento" name="TipoRecrutamento">
                                                <option selected id="Interno" value="Interno">Interno</option>
                                                <option id="Externos" value="Externos">Externo</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <span class="tag is-primary">
                                    Etapas de seleção
                                </span>
                                <br />
                                <span class="tag is-primary">
                                    <p><strong>Triagem de Currículos</strong></p>
                                </span>
                                <div class="field is-grouped">
                                    <p> <strong>Número de currículos recebidos: </strong>@TempData["TenhoInteresse"]  ||  

                                     <strong>Número de currículos triados:</strong>@TempData["ProcessoSeletivo"]</p>
                                </div>

                                <span class="tag is-primary">
                                    <p><strong>Dinâmica de Grupo</strong></p>
                                </span>

                                <div class="field">
                                    <label class="label">Dinâmica de Grupo</label>
                                    <div class="control">
                                        <div class="select">
                                            <select id="Dinamica" name="Dinamica">
                                                <option selected id="DinamicaSim" value="Sim">Sim</option>
                                                <option id="DinamicaNao" value="Nao">Não</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="field is-grouped">
                                    <div class="field control">
                                        <label class="label">Número de Participantes</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.DinamicaNumero, null, new { @class = "input" })
                                            @Html.ValidationMessageFor(m => m.DinamicaNumero, null, new { style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="field control">
                                        <label class="label">Número de candidatos pré selecionado</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.DinamicaNumeroPreSelecionado, null, new { @class = "input" })
                                            @Html.ValidationMessageFor(m => m.DinamicaNumeroPreSelecionado, null, new { style = "color:red" })
                                        </div>
                                    </div>
                                </div>
                                <span class="tag is-primary">
                                    <p><strong>Avaliação de Conhecimento</strong></p>
                                </span>
                                <div class="field control">
                                    <label class="label">Teste aplicado</label>
                                    <div class="control">
                                        @Html.TextBoxFor(m => m.ConhecimentoTeste, null, new { @class = "input" })
                                        @Html.ValidationMessageFor(m => m.ConhecimentoTeste, null, new { style = "color:red" })
                                    </div>
                                </div>
                                <div class="field is-grouped">
                                    <div class="field control">
                                        <label class="label">Número de Participantes</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.ConhecimentoNumero, null, new { @class = "input" })
                                            @Html.ValidationMessageFor(m => m.ConhecimentoNumero, null, new { style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="field control">
                                        <label class="label">Número de candidatos pré selecionado</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.ConhecimentoNumeroPreSelecionado, null, new { @class = "input" })
                                            @Html.ValidationMessageFor(m => m.ConhecimentoNumeroPreSelecionado, null, new { style = "color:red" })
                                        </div>
                                    </div>
                                </div>

                                <span class="tag is-primary">
                                    <p><strong>Avaliação Psicológica</strong></p>
                                </span>
                                <div class="field control">
                                    <label class="label">Teste aplicado</label>
                                    <div class="control">
                                        @Html.TextBoxFor(m => m.PsicologicaTeste, null, new { @class = "input" })
                                        @Html.ValidationMessageFor(m => m.PsicologicaTeste, null, new { style = "color:red" })
                                    </div>
                                </div>
                                <div class="field is-grouped">
                                    <div class="field control">
                                        <label class="label">Número de Participantes</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.PsicologicaNumero, null, new { @class = "input" })
                                            @Html.ValidationMessageFor(m => m.PsicologicaNumero, null, new { style = "color:red" })
                                        </div>
                                    </div>
                                    <div class="field control">
                                        <label class="label">Número de candidatos pré selecionado</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.PsicologicaNumeroPreSelecionado, null, new { @class = "input" })
                                            @Html.ValidationMessageFor(m => m.PsicologicaNumeroPreSelecionado, null, new { style = "color:red" })
                                        </div>
                                    </div>
                                </div>
                                <span class="tag is-primary">
                                    <p><strong>Entrevista Psicológica</strong></p>
                                </span>
                                <div class="field control">
                                    <label class="label">Entrevistador</label>
                                    <div class="control">
                                        @Html.TextBoxFor(m => m.NomeEntrevistador, null, new { @class = "input" })
                                       
                                    </div>
                                </div>
                                <div class="field is-grouped">
                                    <div class="field control">
                                        <label class="label">Número de Participantes</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.EntrevistaNumero, null, new { @class = "input" })
                                        </div>
                                    </div>
                                    <div class="field control">
                                        <label class="label">Número de candidatos pré selecionado</label>
                                        <div class="control">
                                            @Html.TextBoxFor(m => m.EntrevistaNumeroPreSelecionado, null, new { @class = "input" })
                                        </div>
                                    </div>
                                </div>

                                <div class="control">
                                    <button type="submit" class="button is-primary">Salvar Formulário</button>
                                </div>
                            </div>
                            <nav class="level is-mobile">
                                <div class="level-left">

                                </div>
                            </nav>
                        </div>
                    </article>
                </div>
            </div>
        }
    </div>
</body>
</html>
