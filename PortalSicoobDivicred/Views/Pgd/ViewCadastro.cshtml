@model PortalSicoobDivicred.Models.Pgd
<html>
<script src='@Url.Content("~/Scripts/jquery.validate.js")' type="text/javascript">
</script>
<script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type="text/javascript"></script>
@using (Html.BeginForm("Salvarproducao", "Pgd",FormMethod.Post))
{
    
    <div class="columns content">


        <div class="column is-6">
            <div class="control">
                <label class="label">Produto</label>

                <div class="select is-1">
                    @Html.DropDownListFor(m => m.idProduto, new SelectList(Model.descricaoProduto, "Value", "Text"), "SELECIONE O PRODUTO", new {id = "descricaoProduto"})
                    @Html.ValidationMessageFor(m => m.descricaoProduto, null, new {style = "color:red"})
                </div>
            </div>
        </div>
        <div class="column is-6">
            <div class="control" id="funcionario">
                <label class="label">Data Contratação</label>
                @Html.TextBoxFor(m => m.datacontratacao, null, new {@class = "input", type = "date"})

            </div>
        </div>

    </div>
    <div class="columns content">
        <div class="column is-6">
            
            <label class="label">CPF do cliente</label>
            @Html.TextBoxFor(m=>m.cpf,null,new {@class="input",type="string"})
            @Html.ValidationMessageFor(m => m.cpf, null, new { style = "color:red" })
            
        </div>
        
        <div class="column is-6">
            
            <label class="label">Valor</label>
            @Html.TextBoxFor(m=>m.valor,null,new {@class="input",type="number"})
            
            
        </div>

        <div class="control" hidden>
            <label class="label">Funcionário</label>

            <div class="select is-1">
                @Html.DropDownListFor(m => m.idFuncionario, new SelectList(Model.nomeFuncionario, "Value", "Text"), "SELECIONE O FUNCIONARIO", new {id = "nomeFuncionario"})
                @Html.ValidationMessageFor(m => m.nomeFuncionario, null, new {style = "color:red"})
            </div>

        </div>
    </div>
    <div class="columns content">
        <div class="column is-6">
            <label class="label">Observação</label>
            
            @Html.TextBoxFor(m => m.observacao, null, new { @class = "textarea", type ="string"})

            <p class="control">
                <button type="submit" class="button is-success" id="SalvarProdução"  data-balloon="Clique para salvar Produção" data-balloon-pos="down">
                    <i class="fas fa-save"></i>
                    <span class="name"> Salvar Produção</span>
                </button>
            </p>
            

        </div>
    </div>
}
</html>