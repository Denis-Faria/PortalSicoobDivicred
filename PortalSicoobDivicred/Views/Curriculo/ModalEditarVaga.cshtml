@model PortalSicoobDivicred.Models.Vagas

<script>
    function MudaCorAtiva() {
        if (document.getElementById("Ativacao").innerHTML == "Desativa") {
            document.getElementById("Ativacao").innerHTML = "Ativa";
            $("#Ativacao").removeClass();
            $("#Ativacao").addClass("is-primary");

        } else {
            document.getElementById("Ativacao").innerHTML = "Desativada";
            $("#Ativacao").removeClass();
            $("#Ativacao").addClass("is-danger");
        }

    }
</script>
<input id="Idvaga" name="IdVaga" hidden value="@TempData["IdVaga"]"/>


<label class="checkbox">
    <input type="checkbox" @TempData["Ativa"] onchange="MudaCorAtiva()" value="Ativa" id="Ativa" name="Ativa">
    A vaga está <a id="Ativacao" class="is-danger">@TempData["Status"]</a>
</label>
<br/>
<div class="field">
    <label class="label">Titulo da Vaga:</label>
    <p class="control">
        @Html.TextBoxFor(m => m.Titulo, null, new {@class = "input", placeholder = "Ex: Assistente de T.I"})
        @Html.ValidationMessageFor(m => m.Titulo, null, new {style = "color:red"})
    </p>
</div>

