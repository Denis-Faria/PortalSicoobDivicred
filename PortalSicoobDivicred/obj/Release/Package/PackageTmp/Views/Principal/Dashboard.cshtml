<script src='@Url.Content("~/Assets/js/jquery-ui.min.js")' type="text/javascript"></script>
<link href="@Url.Content("~/Assets/css/animate.css")" rel="stylesheet"/>


<br/>
<script>
    $(function() {
        $("#TabBancoHoras").tabs();
    });

    function EscondeVagas() {
        if ($("#VagasInternas").is(":visible")) {
            $("#VagasInternas").addClass("animated fadeOut");

            $("#VagasInternas").hide();
        } else {
            $("#VagasInternas").removeClass("animated fadeOut");
            $("#VagasInternas").addClass("animated fadeIn");
            $("#VagasInternas").show();
        }
    }

</script>
<nav class="level ">
    <p class="level-item has-text-centered">

    </p>
    <p class="level-item has-text-centered">
        <img src="/Images/Dash.png" alt="" style="height: 30px;">
    </p>

    <p class="level-item has-text-centered">

    </p>
</nav>
<div class="content">
    <div class="columns">
        <div class="column is-4">

            <div id="widget">
                <div class="card " style="box-shadow: 2px 2px 2px grey;">
                    <header class="card-header">
                        <p class="card-header-title">
                            Vagas Internas
                        </p>
                        <a href="javascript:EscondeVagas();void(0);" class="card-header-icon" aria-label="more options">
                            <span class="icon">
                                <i class="fa fa-angle-down" aria-hidden="true"></i>
                            </span>
                        </a>
                    </header>
                    <div id="VagasInternas">
                        <div class="card-content">
                            <p>
                                <strong>Vagas em Aberto</strong>
                            </p>
                            <ul>
                                @for (var i = 0; i < Convert.ToInt32(TempData["TotalVagasInternas"]); i++)
                                {
                                    try
                                    {
                                        if (TempData["Interesse " + i].ToString().Equals("Ok"))
                                        {
                                            <p>
                                                @TempData["TituloVagaInterna " + i]
                                                <a data-balloon="Descrição: @TempData["Descricao " + i] | Requisitos: @TempData["Requisito " + i]" data-balloon-length="medium" data-balloon-pos="down">
                                                    <span class="icon">
                                                        <i class="fa fa-lg fa-info-circle"></i>
                                                    </span>
                                                </a>
                                                <a data-balloon="Você já esta participando do processo seletivo." data-balloon-pos="down">
                                                    <span class="icon" id="@i" onmouseleave="$('#@i').removeClass('animated swing')" onmouseover="$('#@i').addClass('animated swing');">
                                                        <i class="fa fa-lg fa-check-circle"></i>
                                                    </span>
                                                </a>
                                            </p>
                                        }
                                        else
                                        {
                                            <p>
                                                @TempData["TituloVagaInterna " + i]
                                                <a data-balloon=" Descriçõa: @TempData["Descricao " + i] | Requisitos: @TempData["Requisito " + i]" data-balloon-length="medium" data-balloon-pos="down">
                                                    <span class="icon">
                                                        <i class="fa fa-lg fa-info-circle"></i>
                                                    </span>
                                                </a>
                                                <a href="@Url.Action("TenhoInteresse", "Principal", new {IdVaga = TempData["IdVaga " + i]})" data-balloon="Clique para participar do processo seletivo." data-balloon-pos="down">
                                                    <span class="icon" id="@i" onmouseleave="$('#@i').removeClass('animated swing')" onmouseover="$('#@i').addClass('animated swing');">
                                                        <i class="fa fa-lg fa-thumbs-o-up"></i>
                                                    </span>
                                                </a>
                                            </p>
                                        }
                                    }
                                    catch
                                    {
                                        <p>
                                            @TempData["TituloVagaInterna " + i]
                                            <a data-balloon="Descrição: @TempData["Descricao " + i] | Requisitos: @TempData["Requisito " + i]" data-balloon-length="medium" data-balloon-pos="down">
                                                <span class="icon">
                                                    <i class="fa fa-lg fa-info-circle"></i>
                                                </span>
                                            </a>
                                            <a href="@Url.Action("TenhoInteresse", "Principal", new {IdVaga = TempData["IdVaga " + i]})" data-balloon="Clique para participar do processo seletivo." data-balloon-pos="down">
                                                <span class="icon" id="@i" onmouseleave="$('#@i').removeClass('animated swing')" onmouseover="$('#@i').addClass('animated swing');">
                                                    <i class="fa fa-lg fa-thumbs-o-up"></i>
                                                </span>
                                            </a>
                                        </p>
                                    }
                                }
                            </ul>
                            <footer class="card-footer">
                                <p class="card-footer-item">
                                    Resultado Processo Seletivo
                                </p>
                                <ul>
                                    @for (var j = 0; j < Convert.ToInt32(TempData["TotalProcessos"]); j++)
                                    {
                                        if (Convert.ToBoolean(TempData["Aprovado " + j].ToString()))
                                        {
                                            <p>
                                                @TempData["TituloVagaInternaProcesso " + j] <a data-balloon="Parabéns você foi aprovado." data-balloon-pos="down">
                                                    <span class="icon">
                                                        <i class="fa fa-lg fa-smile-o"></i>
                                                    </span>
                                                </a>
                                            </p>
                                            <hr/>
                                        }
                                        else
                                        {
                                            <p>
                                                @TempData["TituloVagaInternaProcesso " + j] <a data-balloon="Infelizmente você não foi aprovado. Mas fique de olho para novas oportunidades." data-balloon-pos="down">
                                                    <span class="icon">
                                                        <i class="fa fa-lg fa-frown-o" style="color: darkred"></i>
                                                    </span>
                                                </a>
                                            </p>
                                            <hr/>
                                        }
                                    }


                                </ul>
                            </footer>

                        </div>
                    </div>
                </div>

            </div>
        </div>


        <br/>
        <div class="column is-9">
            <div class="card" style="box-shadow: 2px 2px 2px grey;">
                <header class="card-header">
                    <p class="card-header-title">
                        Banco de Horas
                    </p>
                    <a href="#" class="card-header-icon" aria-label="more options">
                        <span class="icon">
                            <i class="fa fa-angle-down" aria-hidden="true"></i>
                        </span>
                    </a>
                </header>
                <div class="card-content">
                    <div class="content">
                        <div id="TabBancoHoras">
                            <div class="tabs is-centered">
                                <ul>
                                    <li id="AbaJustifica" class="is-active">
                                        <a href="#Justificativa" onclick="javascript:$('#AbaJustificaSetor').removeClass();$('#AbaJustifica').addClass('is-active');$('#AbaBancoHoraUsuario').removeClass();">
                                            <span class="icon is-small">
                                                <i class="fa fa-pencil"></i>
                                            </span>
                                            <span>Justificativas</span>
                                        </a>
                                    </li>
                                    <li id="AbaJustificaSetor">
                                        <a href="#JustificativaSetor" onclick="javascript:$('#AbaJustifica').removeClass();$('#AbaJustificaSetor').addClass('is-active');$('#AbaBancoHoraUsuario').removeClass();">
                                            <span class="icon is-small">
                                                <i class="fa fa-list"></i>
                                            </span>
                                            <span>Justificativas do meu setor</span>
                                        </a>
                                    </li>
                                    <li id="AbaBancoHoraUsuario">
                                        <a href="#BancoDeHora" onclick="javascript:$('#AbaJustifica').removeClass();$('#AbaBancoHoraUsuario').addClass('is-active');$('#AbaJustificaSetor').removeClass();">
                                            <span class="icon is-small">
                                                <i class="fa fa-clock-o"></i>
                                            </span>
                                            <span>Banco de Horas</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                            <script src='@Url.Content("~/Scripts/jquery.validate.js")' type="text/javascript">
                            </script>
                            <script src='@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")' type="text/javascript"></script>
                            <div id="Justificativa">
                               @Html.Action("Justificativas","Principal")
                            </div>
                            <div id="JustificativaSetor">
                                Setor
                            </div>
                            <div id="BancoDeHora">
                                Banco
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                   
                </footer>
            </div>
        </div>

    </div>


</div>