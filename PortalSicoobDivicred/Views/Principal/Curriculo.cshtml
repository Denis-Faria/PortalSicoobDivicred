<script>

    function GerenciarVaga(IdVaga) {
        $("#Conteudo").empty();
        $.ajax(
            {
                type: 'POST',
                url: '/Principal/GerenciarVaga',
                dataType: 'html',
                cache: true,
                async: true,
                data: { "IdVaga": IdVaga },
                success: function(data) {
                    var tamanho = $(window).height();
                    $("body").css('height', tamanho);
                    $("#Conteudo").append(data);
                    windowHeight = $(document).height();
                    $('#CorpoPrincipal').css('height', windowHeight);
                    $('#CorpoPrincipal').css('background', '#e6e6e6');

                }
            });

    }

    function FiltroPerfil(Filtro) {
        var filtro = Filtro.value;
        $("#Conteudo").empty();
        $.ajax(
            {
                type: 'GET',
                url: '/Principal/Curriculo',
                dataType: 'html',
                cache: true,
                async: true,
                data: { "Ordenacao": filtro },
                success: function (data) {
                    var tamanho = $(window).height();
                    $("body").css('height', tamanho);
                    $("#Conteudo").append(data);
                    windowHeight = $(document).height();
                    $('#CorpoPrincipal').css('height', windowHeight);
                    $('#CorpoPrincipal').css('background', '#e6e6e6');
                }
            });
    }

    function FiltroArea(Filtro) {
        var filtro = Filtro.value;
        var Cidade = document.getElementById("FiltroCidade");
        var Certificacao = document.getElementById("FiltroCertificacao");
        $("#Conteudo").empty();
        $.ajax(
            {
                type: 'GET',
                url: '/Principal/CurriculoArea',
                dataType: 'html',
                cache: true,
                async: true,
                data: { "Ordenacao": filtro, "Cidade":Cidade.value,"Certificacao":Certificacao.value},
                success: function (data) {
                    var tamanho = $(window).height();
                    $("body").css('height', tamanho);
                    $("#Conteudo").append(data);
                    windowHeight = $(document).height();
                    $('#CorpoPrincipal').css('height', windowHeight);
                    $('#CorpoPrincipal').css('background', '#e6e6e6');
                }
            });
    }


    function VerPerfil(Cpf) {
        $("#PerfilCompleto").empty();
        $.ajax(
            {
                type: 'GET',
                url: '/Principal/PerfilCandidato',
                dataType: 'html',
                cache: true,
                async: true,
                data: { "Cpf": Cpf },
                success: function (data) {
                    $("#PerfilCompleto").append(data);
                    $('#ModalPerfil').removeClass();
                    $('#ModalPerfil').addClass('modal is-active');
                }
            });
    }

    $(function() {
