@for (var i = 0; i < Convert.ToInt32(TempData["TotalCampos"]); i++)
{
    <div class="field">
        <div class="control">
            <label class="label">@TempData["NomeCampo" + i]</label>
            <input name="@TempData["NomeCampo" + i]" class="input" @TempData["Obrigatorio" + i]/>
        </div>
    </div>
}
@{
    foreach (var combo in (Dictionary<string, string>) TempData["Combos"])
    {
        <div>
            <label class="label">@combo.Key</label>
            <div class="select is-fullwidth">
                <select name="@combo.Key" @TempData["Obnrigatorio" + combo.Key]>
                    <option> SELECIONE O @combo.Key</option>
                    @{
                        var total = combo.Value.Split(';');
                        for (var i = 0; i < total.Length; i++)
                        {
                            <option value="@total[i]">@total[i]</option>
                        }
                    }
                </select>
            </div>
        </div>
        <br/>
    }
}